<?xml version="1.0"?>
<ruleset name="Material Theme Builder Coding Standards">
	<arg name="extensions" value="php" />
	<arg name="colors" />
	<arg name="parallel" value="16" />
	<arg value="s" />

	<rule ref="WordPress-Core">
		<exclude name="Generic.Arrays.DisallowShortArraySyntax" />
		<exclude name="PSR2.Classes.PropertyDeclaration.Underscore" />
		<exclude name="Squiz.PHP.CommentedOutCode.Found" />
		<exclude name="WordPress.WP.TimezoneChange" />
		<exclude name="WordPressVIPMinimum.Functions.RestrictedFunctions.get_page_by_title_get_page_by_title" />
	</rule>

	<rule ref="WordPress-Extra"/>
	<rule ref="WordPress-Docs" />
	<rule ref="WordPress-VIP-Go"/>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="material-theme-builder" />
			</property>
		</properties>
	</rule>
	<rule ref="PHPCompatibilityWP" />

	<!-- Disallow long array syntax -->
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

	<config name="testVersion" value="5.6-" />

	<file>.</file>

	<exclude-pattern>*/assets/*</exclude-pattern>
	<exclude-pattern>*/bin/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tests/coverage/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
</ruleset>
