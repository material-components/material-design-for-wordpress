{
	"name": "material/hand-picked-posts",
	"category": "material",
	"attributes": {
		"className": {
			"type": "string"
		},
		"style": {
			"type": "string",
			"default": "masonry"
		},
		"align": {
			"type": "string",
			"default": "wide"
		},
		"contentLayout": {
			"type": "string",
			"default": "text-above-media"
		},
		"columns": {
			"type": "number",
			"default": 3
		},
		"postsToShow": {
			"type": "number",
			"default": 12
		},
		"cardStyle": {
			"enum": [ "global", "elevated", "outlined"],
			"default": "global",
			"type": "string"
		},
		"displayPostDate": {
			"type": "boolean",
			"default": true
		},
		"displayPostContent": {
			"type": "boolean",
			"default": true
		},
		"postContentLength": {
			"type": "number",
			"default": 20
		},
		"displayFeaturedImage": {
			"type": "boolean",
			"default": true
		},
		"featuredImageSizeSlug": {
			"type": "string",
			"default": "large"
		},
		"displayCommentsCount": {
			"type": "boolean",
			"default": true
		},
		"displayPostAuthor": {
			"type": "boolean",
			"default": false
		},
		"posts": {
			"type": "array",
			"default": [],
			"items": {
				"type": "integer"
			}
		},
		"orderby": {
			"type": "string",
			"enum": [
				"date",
				"title",
				"popularity"
			],
			"default": "date"
		},
		"editMode": {
			"type": "boolean",
			"default": true
		},
		"preview": {
			"type": "boolean",
			"default": false
		},
		"postType": {
			"type": "string",
			"default": "posts-pages"
		}
	},
	"supports": {
	   "align": [
		  "wide",
		  "full"
	   ]
	}
 }
